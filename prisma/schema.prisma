datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  name     String
  surname  String?
  username String  @unique
  slug     String
  type     String?
  orgname  String?

  link   Link[]
  linkId String?
}

model Link {
  id    String @id @default(uuid())
  title String
  link  String

  user   User?   @relation(fields: [userId], references: [id])
  userId String?
}
