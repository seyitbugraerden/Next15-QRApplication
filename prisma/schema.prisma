datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String  @id
  email    String  @unique
  name     String
  surname  String?
  username String
  slug     String
  type     String? // Allow type to be nullable
  orgname  String?
}
